<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/title_detail"
        android:background="@android:color/transparent"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/second_title"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:background="@drawable/bg_function_round"/>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
        android:layout_marginTop="285dp"
         android:orientation="horizontal"
         >
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:gravity="center_horizontal">
             <ImageView
                 android:id="@+id/settings_btn"
                 android:layout_height="50dp"
                 android:layout_width="50dp"
                 android:background="@drawable/settings_btn_seletor"
                 android:layout_marginTop="1dp"
                 />
             <TextView
                 android:text="设置"
                 style="@style/bottom_button_text"
                 android:layout_below ="@+id/settings_btn"
                 />
         </RelativeLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
            >
                <ImageView
                    android:id="@+id/capacity_btn"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:background="@drawable/capacity_btn_seletor"
                    android:layout_marginTop="62dp" />
             <TextView
                 android:text="存储状态"
                 style="@style/bottom_button_text"
                 android:layout_below ="@+id/capacity_btn"
                 />
            </RelativeLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:gravity="center_horizontal">
             <ImageView
                 android:id="@+id/video_btn"
                 android:layout_height="65dp"
                 android:layout_width="65dp"
                 android:background="@drawable/video_btn_seletor"
                 android:layout_marginTop="77dp" />
             <TextView
                 android:text="相机预览"
                 android:layout_width="65dp"

                 style="@style/bottom_button_text"
                 android:layout_below ="@+id/video_btn"
                 />
         </RelativeLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:gravity="right">
             <ImageView
                 android:id="@+id/dv_btn"
                 android:layout_height="50dp"
                 android:layout_width="50dp"
                 android:src="@drawable/dv_btn_seletor"
                 android:layout_marginTop="62dp" />
             <TextView
                 android:text="存储档案"
                 style="@style/bottom_button_text"
                 android:layout_below ="@+id/dv_btn"
                 />
         </RelativeLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:gravity="center_horizontal">
             <ImageView
                 android:id="@+id/local_btn"
                 android:layout_height="50dp"
                 android:layout_width="50dp"
                 android:background="@drawable/local_btn_seletor"
                 android:layout_marginTop="1dp" />
             <TextView
                 android:text="手机档案"
                 style="@style/bottom_button_text"
                 android:layout_below ="@+id/local_btn"
                 />

         </RelativeLayout>
     </LinearLayout>
    <RelativeLayout
        android:id="@+id/help"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/help"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="帮助"/>

    </RelativeLayout>

</RelativeLayout>