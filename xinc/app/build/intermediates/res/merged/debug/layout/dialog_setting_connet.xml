<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:orientation="vertical" >
    		<!-- 确认摄像机已开启 -->
	   		<LinearLayout style="@style/dialog_row_layout" android:id="@+id/cameraControlCameraSettings"  >
			    <TextView  android:text="@string/dialog_no_connection_message_video_open" style="@style/dialog_wifi_row_text" />
	   		</LinearLayout>
	   		<ImageView android:layout_width="fill_parent" android:layout_height="1dp" android:background="@color/settings_list_line"/>
	   		<!-- 开启手机wifi连接 -->
	   	    <LinearLayout android:id="@+id/open_wifi" 
	   	        style="@style/dialog_row_layout" >
			    <TextView  android:text="@string/dialog_no_connection_message_open_wifi" style="@style/dialog_wifi_row_text" />
			    <ImageView android:layout_marginRight="5dp" style="@style/row_arrow" android:src="@drawable/arrow_gray" />
			    <ImageView android:layout_marginRight="5dp" style="@style/row_arrow" />
    		</LinearLayout>
    		<ImageView android:layout_width="fill_parent" android:layout_height="1dp" android:background="@color/settings_list_line"/>
    		<!-- 将手机与录像机Wi-Fi互联 -->
	   	    <LinearLayout style="@style/dialog_row_layout" >
			    <TextView  android:text="@string/dialog_no_connection_message_wifi" style="@style/dialog_wifi_row_text" />
    		</LinearLayout>
    		<ImageView android:layout_width="fill_parent" android:layout_height="1dp" android:background="@color/settings_list_line"/>
</LinearLayout>

