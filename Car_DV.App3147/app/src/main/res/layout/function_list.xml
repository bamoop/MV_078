<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/functionListScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/functionListControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:padding="10dip" >

                <ImageView
                    android:id="@+id/functionListControlIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/setting_btn" />

                <TextView
                    android:id="@+id/functionListControlTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/functionListControlIcon"
                    android:layout_toRightOf="@+id/functionListControlIcon"
                    android:paddingLeft="10dp"
                    android:text="@string/label_ip_camera_control"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/functionListPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:padding="10dip" >

                <ImageView
                    android:id="@+id/functionListPreviewIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/live_btn" />

                <TextView
                    android:id="@+id/functionListPreviewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/functionListPreviewIcon"
                    android:layout_toRightOf="@+id/functionListPreviewIcon"
                    android:paddingLeft="10dp"
                    android:text="@string/label_ip_camera_preview"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/functionListBrowser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:padding="10dip" >

                <ImageView
                    android:id="@+id/functionListBrowserIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/camera_folder_btn" />

                <TextView
                    android:id="@+id/functionListBrowserTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/functionListBrowserIcon"
                    android:layout_toRightOf="@+id/functionListBrowserIcon"
                    android:paddingLeft="10dp"
                    android:text="@string/label_ip_camera_browser"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/functionListLocalAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:padding="10dip" >

                <ImageView
                    android:id="@+id/functionListLocalAlbumIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/local_folder_btn" />

                <TextView
                    android:id="@+id/functionListLocalAlbumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/functionListLocalAlbumIcon"
                    android:layout_toRightOf="@+id/functionListLocalAlbumIcon"
                    android:paddingLeft="10dp"
                    android:text="@string/label_local_album"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                 
            </RelativeLayout>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>