<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_selector"
        app:tabTextColor="@color/mainTable_textColor"
        app:tabSelectedTextColor="@color/mainTable_selectedTextColor"
        app:tabIndicatorColor="@color/mainTable_tabIndicatorColor"
        app:tabBackground="@color/mainTable_bgColor"
        app:tabIndicatorHeight="4dp"
        app:tabGravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_video"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
